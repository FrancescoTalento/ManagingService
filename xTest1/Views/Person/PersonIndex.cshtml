@model IEnumerable<PersonResponse>

@{
    ViewBag.Title = "Person";
}

<h1>
    Persons
</h1>
<table class="table w-100 mt">
    <thead>
       <tr>
           <th>Person Name</th>
           <th>Email</th>
           <th>Date of Birth</th>
           <th>Age</th>
           <th>Gender</th>
           <th>Country</th>
           <th>Address</th>
           <th>Receive News Letter</th>
       </tr>
    </thead>
    <tbody>
        @* ITERAR COM O MOLDE ABAIXO COM A ORDEM ACIMA *@
        @foreach (var person in Model)
        {
        <tr>
            <td>@person.PersonName</td>
            <td>@person.Email</td>
            <td>@person.DateOfBirth?.ToString("dd MM yyyy")</td>
            <td>@person.Age</td>
            <td>@person.Gender</td>
            <td>@person.Country</td>
            <td>@person.Address</td>
            <td>@person.ReceiveNewsLetters</td>
        </tr>
            
        }
    </tbody>
</table>
